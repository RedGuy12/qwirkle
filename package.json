{
	"name": "qwirkle",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"main": "src/js/server.js",
	"scripts": {
		"build": "tsc --project tsconfig.json",
		"dev": "tsc --project tsconfig.json --watch",
		"format": "prettier --write \"**\" \"!src/js/**\" --ignore-unknown",
		"serve": "nodemon . --watch",
		"start": "node ."
	},
	"nodemonConfig": {
		"ext": "js,png,html",
		"watch": [
			"src"
		]
	},
	"dependencies": {
		"mime-types": "2.1.35",
		"modern-normalize": "1.1.0",
		"serve-handler": "6.1.5",
		"socket.io": "4.5.4",
		"twemoji": "14.0.2",
		"vue": "3.2.47",
		"vue-class-component": "8.0.0-rc.1"
	},
	"devDependencies": {
		"@babel/types": "7.20.7",
		"@redguy12/prettier-config": "2.0.2",
		"@types/mime-types": "<=2.1.35",
		"@types/serve-handler": "<=6.1.5",
		"nodemon": "2.0.20",
		"prettier": "2.8.0",
		"prettier-plugin-vue": "1.0.9",
		"socket.io-client": "4.6.0",
		"typescript": "4.9.4"
	},
	"engines": {
		"node": "18.12.1",
		"npm": "8.13.2"
	}
}
