{
	"name": "qwirkle",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"main": "src/js/server.js",
	"scripts": {
		"build": "tsc --project tsconfig.json",
		"dev": "tsc --project tsconfig.json --watch",
		"format": "prettier --write \"**\" \"!src/js/**\" --ignore-unknown",
		"serve": "nodemon . --watch",
		"start": "node ."
	},
	"nodemonConfig": {
		"ext": "js,png,html,css",
		"ignore": "src/style.css",
		"watch": [
			"src"
		]
	},
	"dependencies": {
		"mime-types": "2.1.35",
		"modern-normalize": "1.1.0",
		"serve-handler": "6.1.5",
		"socket.io": "4.5.4",
		"twemoji": "14.0.2",
		"vue": "3.2.47",
		"vue-class-component": "8.0.0-rc.1",
		"vue-use-css": "1.0.12"
	},
	"devDependencies": {
		"@babel/types": "7.20.7",
		"@redguy12/prettier-config": "2.0.2",
		"@types/mime-types": "<=2.1.35",
		"@types/serve-handler": "<=6.1.5",
		"nodemon": "2.0.20",
		"prettier": "2.8.3",
		"socket.io-client": "4.5.4",
		"typescript": "4.9.5"
	},
	"engines": {
		"node": "18.12.1",
		"npm": "8.13.2"
	},
	"hintConfig": {
		"extends": [
			"development"
		],
		"browserslist": [
			"android >= 108",
			"firefox >= 78",
			"chrome >= 84",
			"ios_saf >= 13.7",
			"edge >= 83",
			"safari >= 13.1"
		],
		"hints": {
			"compat-api/css": [
				"default",
				{
					"ignore": [
						"scroll-behavior"
					]
				}
			]
		}
	}
}
